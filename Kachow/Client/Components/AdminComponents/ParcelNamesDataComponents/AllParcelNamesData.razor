<h2>Типы посылок:</h2>
<Accordion>
    <Collapse Visible="@collapse1Visible">
        <CollapseHeader>
            <Heading Size="HeadingSize.Is5">
                <Button Clicked="@(()=>collapse1Visible = !collapse1Visible)">Все типы посылок</Button>
            </Heading>
        </CollapseHeader>
        <CollapseBody>
            <ParcelNamesList/>
        </CollapseBody>
    </Collapse>
    <Collapse Visible="@collapse2Visible">
        <CollapseHeader>
            <Heading Size="HeadingSize.Is5">
                <Button Clicked="@(()=>collapse2Visible = !collapse2Visible)">Изменить тип</Button>
            </Heading>
        </CollapseHeader>
        <CollapseBody>

        </CollapseBody>
    </Collapse>
    <Collapse Visible="@collapse3Visible">
        <CollapseHeader>
            <Heading Size="HeadingSize.Is5">
                <Button Clicked="@(()=>collapse3Visible = !collapse3Visible)">Удалить тип</Button>
            </Heading>
        </CollapseHeader>
        <CollapseBody>

        </CollapseBody>
    </Collapse>
    <Collapse Visible="@collapse4Visible">
        <CollapseHeader>
            <Heading Size="HeadingSize.Is5">
                <Button Clicked="@(()=>collapse4Visible = !collapse4Visible)">Добавить тип</Button>
            </Heading>
        </CollapseHeader>
        <CollapseBody>
            <AddParcelName/>
        </CollapseBody>
    </Collapse>
</Accordion>

@code{
    bool collapse1Visible = false;
    bool collapse2Visible = false;
    bool collapse3Visible = false;
    bool collapse4Visible = false;
}

