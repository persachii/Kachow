<div class="container pb-5 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-nowrap me-5">Введите трек-номер:</h2>

        <Addons>
            <Addon AddonType="AddonType.Body">
                <TextEdit MaskType="MaskType.RegEx" EditMask="[1-9]" @bind-Text="@trackNumber" Placeholder="123456789" />
            </Addon>
            <Addon AddonType="AddonType.End">
                <Button Clicked="@ShowFoundParcel" Color="Color.Primary" Type="ButtonType.Submit" PreventDefaultOnSubmit>Найти отправление</Button>
            </Addon>
        </Addons>


    </div>
</div>

@if (trackedParcelNumber != 0)
{
    <FoundParcel @bind-TrackedParcelNumber="@trackedParcelNumber"/>
}






@code{
    string? trackNumber;
    int trackedParcelNumber = 0;
    bool newNumber;
    private void ShowFoundParcel()
    {
        trackedParcelNumber = 0;
        if (trackNumber != null)
        {
            trackedParcelNumber = int.Parse(trackNumber);

        }


    }

}

